// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated"
}

generator kysely {
  provider  = "prisma-kysely"
  output    = "../../src/types/db"
  fileName  = "database.ts"
  camelCase = true
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
